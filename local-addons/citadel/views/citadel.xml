<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <act_window id="citadel_session_action"
                name="Sessions at the Citadel"
                res_model="citadel.session" />
    <act_window id="citadel_course_action"
                name="Courses"
                res_model="citadel.course" />

    <menuitem id="main_citadel_menu" name="Citadel" web_icon="citadel,static/description/icon.png" />
        <menuitem id="citadel_menu" name="What's goin' on at the Citadel" parent="main_citadel_menu" />
            <menuitem id="sessions_menu" name="Sessions" parent="citadel_menu" action="citadel_session_action" sequence="1" />
            <menuitem id="courses_menu" name="Courses" parent="citadel_menu" action="citadel_course_action" sequence="10" />

    <record id="citadel_session_view_form"
            model="ir.ui.view">
        <field name="name">Citadel Session</field>
        <field name="model">citadel.session</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="course" />
                    <field name="state" />
                    <field name="max_attendees" />
                    <field name="attendees"
                           widget="many2many_tags" />
                    <field name="completion_pc"
                           widget="progressbar" />
                </group>
                <group>
                    <field name="time_event" />
                </group>
            </form>
        </field>
    </record>

    <record id="citadel_course_view_form"
            model="ir.ui.view">
        <field name="name">Citadel Course</field>
        <field name="model">citadel.course</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="maester" />
                    <field name="level" />
                </group>
                <group>
                    <field name="sessions" 
                           widget="one2many_tags" />
                </group>
            </form>
        </field>
    </record>

    <record id="citadel_session_view_list"
            model="ir.ui.view">
        <field name="name">Sessions at the Citadel</field>
        <field name="model">citadel.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="course" />
                <field name="state" />
                <field name="time_event" />
                <field name="attendees"
                       widget="many2many_tags" />
                <field name="completion_pc"
                        widget="progressbar" />
            </tree>
        </field>
    </record>

    <record id="citadel_course_view_list"
            model="ir.ui.view">
        <field name="name">Courses curated by the Citadel</field>
        <field name="model">citadel.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="maester" />
                <field name="level" />
                <field name="sessions" />
            </tree>
        </field>
    </record>
</odoo>