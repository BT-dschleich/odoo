<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <act_window id="coop_task_action"
                name="Tasks"
                res_model="coop.task" />
    <act_window id="coop_day_action"
                name="Days"
                res_model="coop.day" />
	<act_window id="coop_volunteer_action"
                name="Volunteers"
                res_model="coop.volunteer" />

    <menuitem id="main_coop_menu" name="Coop" web_icon="coop,static/description/icon.jpg" />
        <menuitem id="coop_menu" name="Welcome" parent="main_coop_menu" />
            <menuitem id="tasks_menu" name="Tasks" parent="coop_menu" action="coop_task_action" sequence="1" />
            <menuitem id="days_menu" name="Days" parent="coop_menu" action="coop_day_action" sequence="10" />
			<menuitem id="volunteers_menu" name="Volunteers" parent="coop_menu" action="coop_volunteer_action" sequence="10" />

    <record id="coop_task_view_form"
            model="ir.ui.view">
        <field name="name">Coop Task</field>
        <field name="model">coop.task</field>
        <field name="arch" type="xml">
            <form>
				<sheet>
					<h1>
						<field name="name" placeholder="Name" />
					</h1>
					<group>
						<group>
							<field name="day_nr" />
							<field name="task_type" />
							<field name="state" />
							<field name="required_workforce" />
						</group>
						<group>
							<field name="start_time" />
							<field name="end_time" />
							<field name="duration" />
						</group>
					</group>
					<group>
						<field name="volunteer_ids"
							   widget="many2many_tags" />
					</group>
				</sheet>
            </form>
        </field>
    </record>

    <record id="coop_day_view_form"
            model="ir.ui.view">
        <field name="name">Coop Day</field>
        <field name="model">coop.day</field>
        <field name="arch" type="xml">
            <form>
				<sheet>
					<h1>
						<field name="day_nr" placeholder="Number" />
					</h1>
					<group>
						<field name="required_workforce" />
						<field name="task_ids" />
						<field name="volunteer_ids" />
					</group>
				</sheet>
            </form>
        </field>
    </record>

	<record id="coop_volunteer_view_form"
            model="ir.ui.view">
        <field name="name">Coop Volunteer</field>
        <field name="model">coop.volunteer</field>
        <field name="arch" type="xml">
            <form>
				<sheet>
					<h1>
						<field name="name" placeholder="Name" />
					</h1>
					<group>
						<field name="availability" />
						<field name="tasks" />
					</group>
				</sheet>
            </form>
        </field>
    </record>

    <record id="coop_task_view_list"
            model="ir.ui.view">
        <field name="name">Tasks</field>
        <field name="model">coop.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="state" />
                <field name="task_type" />
				<field name="day_nr" />
                <field name="duration" />
                <field name="workers_filled_pc"
                       widget="progressbar" />
            </tree>
        </field>
    </record>

    <record id="coop_day_view_list"
            model="ir.ui.view">
        <field name="name">Days</field>
        <field name="model">coop.day</field>
        <field name="arch" type="xml">
            <tree>
                <field name="day_nr" />
                <field name="task_ids"
					   widget="many2many_tags" />
                <field name="workers_filled_pc"
					   widget="progressbar" />
            </tree>
        </field>
    </record>

	<record id="coop_volunteer_view_list"
            model="ir.ui.view">
        <field name="name">Volunteers</field>
        <field name="model">coop.volunteer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="availability" />
                <field name="tasks"
					   widget="many2many_tags" />
            </tree>
        </field>
    </record>
</odoo>