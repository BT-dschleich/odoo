<odoo>
    <data>
        <record id="day0" model="coop.day">
            <field name="day_nr">1</field>
        </record>
        <record id="day1" model="coop.day">
            <field name="day_nr">2</field>
        </record>
        <record id="day2" model="coop.day">
            <field name="day_nr">3</field>
        </record>
        <record id="day3" model="coop.day">
            <field name="day_nr">4</field>
        </record>

        <record id="task0" model="coop.task">
            <field name="name">Unload a truck</field>
            <field name="state">todo</field>
            <field name="task_type">recurring</field>
            <field name="start_time">2018-08-15</field>
            <field name="duration">1</field>
            <field name="day_nr" ref="day0" />
            <field name="required_workforce">2</field>
        </record>
        <record id="task1" model="coop.task">
            <field name="name">Paint a rainbow</field>
            <field name="state">progress</field>
            <field name="task_type">punctual</field>
            <field name="start_time">2018-06-22</field>
            <field name="end_time">2018-07-21</field>
            <field name="day_nr" ref="day1" />
            <field name="required_workforce">10</field>
        </record>
        <record id="task2" model="coop.task">
            <field name="name">Drink beer</field>
            <field name="state">done</field>
            <field name="task_type">recurring</field>
            <field name="start_time">2018-06-11</field>
            <field name="duration">72</field>
            <field name="day_nr" ref="day2" />
            <field name="required_workforce">40</field>
        </record>
        <record id="task3" model="coop.task">
            <field name="name">Sell the drugs from the truck</field>
            <field name="state">todo</field>
            <field name="task_type">punctual</field>
            <field name="start_time">2018-08-15</field>
            <field name="duration">24</field>
            <field name="day_nr" ref="day0" />
            <field name="required_workforce">5</field>
        </record>

        <record id="volunteer0" model="coop.volunteer">
            <field name="name">Pablo Escobar</field>
            <field name="availability">recurrent</field>
            <field name="tasks" eval="[(6, 0, [ref('task0'), ref('task2')])]" />
        </record>
        <record id="volunteer1" model="coop.volunteer">
            <field name="name">Al Capone</field>
            <field name="availability">punctual</field>
            <field name="tasks" eval="[(6, 0, [ref('task2')])]" />
        </record>
        <record id="volunteer2" model="coop.volunteer">
            <field name="name">Brutus</field>
            <field name="availability">recurrent</field>
            <field name="tasks" eval="[(6, 0, [ref('task3'), ref('task1'), ref('task2')])]" />
        </record>
        <record id="volunteer3" model="coop.volunteer">
            <field name="name">Walter White</field>
            <field name="availability">punctual</field>
            <field name="tasks" eval="[(6, 0, [ref('task1'), ref('task2')])]" />
        </record>
    </data>
</odoo>